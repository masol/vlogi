{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "os:default",
    "clipboard-manager:default",
    "notification:default",
    "sql:default",
    "sql:allow-execute",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:allow-mkdir",
    "fs:allow-exists",
    "fs:allow-rename",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        }
      ]
    }
  ]
}